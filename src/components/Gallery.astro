---
import { Image } from "astro:assets";
import art1 from "../assets/art1.jpg";
import art2 from "../assets/art2.jpg";
import art3 from "../assets/art3.jpg";
import art4 from "../assets/art4.jpg";
const images = [art1, art2, art3, art4];
---

<div class="mx-12">
  <h2 class="my-24 text-center text-xl">Latest Art Pieces</h2>
  <div class="grid grid-cols-1 gap-24 xl:mx-48 xl:grid-cols-2">
    {
      images.map((image) => (
        <div class="group relative">
          <Image
            class="relative z-10 w-full rounded-xl transition-all group-hover:-translate-x-3"
            src={image}
            alt="picture"
          />
          <div class="absolute inset-1 rounded-xl bg-white transition-all group-hover:translate-x-4 group-hover:translate-y-4" />
        </div>
      ))
    }
  </div>
</div>
